@model Project.Genius.Web.ViewModels.ModuleViewModels

<div class="task-list">
    <p>
        @Html.ActionLink("+Module Types", "Create", "Module", new { @class = "btn btn-success" })
    </p>
    <div class="box">
        <div class="box-header">
            <h2>
                <i class="fa fa-list"></i>
                Module Types
            </h2>
        </div>
        <div class="box-content">
            <div class="todo">
                <ul class="todo-list">
                    @foreach (var task in Model.ModuleTypes)
                    {
                        <li data-id="@task.Id">
                            <span class="todo-actions">
                                <i class="fa fa-list-alt"></i>
                            </span>
                            <span class="desc">
                                @Ajax.ActionLink(
                                    @task.Name,
                                    "Details",
                                    new
                                    {
                                        id = @task.Id
                                    },
                                    new AjaxOptions
                                    {
                                        HttpMethod = "get",
                                        InsertionMode = InsertionMode.Replace,
                                        UpdateTargetId = "detailsWrapper",
                                        OnSuccess = "showModuleDetails"
                                    })
                            </span>
                            <a class="remove" href="#">
                                <i class="fa fa-times"></i>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>