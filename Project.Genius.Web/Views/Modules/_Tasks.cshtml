@model Project.Genius.Schema.Entities.Module

<div id="moduleTasks"
     class="dd"
     data-arrange-url="@Url.Action("ArrangeTasks")"
     data-delete-url="@Url.Action("DeleteTask")">

    <ol class="dd-list">
        @foreach (var task in Model.Tasks.OrderBy(t => t.Order))
        {
            <li class="dd-item dd3-item" data-id="@task.Id">
                <div class="dd-handle dd3-handle">
                    <i class="fa fa-bars"></i>
                </div>
                <div class="dd3-content">
                    @task.Name
                    <a class="remove" href="@Url.Action("DeleteTask", new { @task.Id })" data-toggle="modal" data-target="#myModal">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </li>
        }
    </ol>

</div>