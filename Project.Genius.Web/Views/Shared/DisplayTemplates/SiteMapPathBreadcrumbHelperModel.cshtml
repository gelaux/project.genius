@model SiteMapPathHelperModel
@using System.Linq

<ol class="breadcrumb">
    @foreach (var node in Model.Nodes)
    {
        if (node != Model.Last())
        {
            <li class=@(node.IsCurrentNode ? "active" : "")>
                <a href=@node.Url>@node.Title</a>
            </li>
        }
        else
        {
            <li class=@(node.IsCurrentNode ? "active" : "")>
                @node.Title
            </li>
        }
    }
</ol>